<!doctype html>
<html lang="id"> 
 <head> 
  <meta charset="UTF-8"> 
  <title>Pengumuman Hasil Penerimaan</title> 
  <style>
        body { font-family: Arial, sans-serif; margin: 20px; }
        input, button { margin: 5px; }
    </style> 
 </head> 
 <body> 
  <h1 align="center">Pengumuman Hasil Penerimaan MPK Masa Bhakti 2024</h1> 
  <form align="center" id="formPendaftaran"> <label for="nama">Nama:</label> 
   <h1><input type="text" id="nama" required></h1> 
   <h2><br> <button type="submit">Cek Status</button></h2> 
  </form> 
  <h1><p align="center" id="hasil"></p></h1> 
  <script>
        const daftarDiterima = ["Tb.Abdul Aziz", "Mochamad Arwansyah Prastya"]; // Contoh daftar nama yang diterima

        document.getElementById('formPendaftaran').onsubmit = function(event) {
            event.preventDefault();
            const nama = document.getElementById('nama').value;
            const status = daftarDiterima.includes(nama) ? "Diterima" : "Tidak Diterima";
            document.getElementById('hasil').textContent = Nama: ${nama}, Status: ${status};
        };
    </script> 
 </body>
</html>
